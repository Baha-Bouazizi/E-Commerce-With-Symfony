            </div>
            <div class="col-md-6 text-md-end">
                <img src="{{ asset('assets/images/payment-methods.png') }}" alt="Méthodes de paiement" class="payment-methods" onerror="this.style.display='none'" style="max-height: 25px;">
            </div>
        </div>
    </div>
</div>

<button id="back-to-top" class="btn btn-secondary btn-sm position-fixed bottom-0 end-0 m-4 rounded-circle" style="width: 45px; height: 45px; display: none; z-index: 1000;">
    <i class="bi bi-arrow-up"></i>
</button>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Back to top button
        var backToTopBtn = document.getElementById('back-to-top');
        
        window.addEventListener('scroll', function() {
            if (window.pageYOffset > 300) {
                backToTopBtn.style.display = 'flex';
                backToTopBtn.style.alignItems = 'center';
                backToTopBtn.style.justifyContent = 'center';
            } else {
                backToTopBtn.style.display = 'none';
            }
        });
        
        backToTopBtn.addEventListener('click', function() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    });
</script>
