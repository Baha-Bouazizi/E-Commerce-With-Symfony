{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Tableau de bord{% endblock %}

{% block content_title %}Tableau de bord de La Boot'Ique{% endblock %}

{% block main %}
    <!-- Statistiques générales -->
    <div class="stats-cards mb-4">
        <div class="row">
            <div class="col-md-3">
                <div class="card bg-info text-white shadow-sm">
                    <div class="card-body">
                        <div class="card-title h5">Ventes totales</div>
                        <div class="card-text display-6">{{ globalStats.totalSales|number_format(2, ',', ' ') }} €</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white shadow-sm">
                    <div class="card-body">
                        <div class="card-title h5">Commandes</div>
                        <div class="card-text display-6">{{ globalStats.orderCount }}</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-primary text-white shadow-sm">
                    <div class="card-body">
                        <div class="card-title h5">Panier moyen</div>
                        <div class="card-text display-6">{{ globalStats.averageBasket|number_format(2, ',', ' ') }} €</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card {{ globalStats.outOfStock > 0 ? 'bg-danger' : 'bg-secondary' }} text-white shadow-sm">
                    <div class="card-body">
                        <div class="card-title h5">Produits en rupture</div>
                        <div class="card-text display-6">{{ globalStats.outOfStock }}</div>
                        {% if globalStats.outOfStock > 0 %}
                            <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\ProductCrudController').setAction('index').set('filters[stock][comparison]', '=').set('filters[stock][value]', '0') }}" class="text-white">Voir les produits</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Graphique des ventes -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h3 class="card-title mb-0">Évolution des ventes (30 derniers jours)</h3>
        </div>
        <div class="card-body">
            <canvas id="salesChart" width="100%" height="40"></canvas>
        </div>
    </div>
    
    <!-- Raccourcis administratifs -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h3 class="card-title mb-0">Raccourcis administratifs</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\ProductCrudController').setAction('new') }}" class="btn btn-primary btn-lg d-block">
                        <i class="fas fa-plus-circle me-2"></i> Nouveau produit
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\OrderCrudController').setAction('index') }}" class="btn btn-secondary btn-lg d-block">
                        <i class="fas fa-shopping-cart me-2"></i> Commandes
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\CategoryCrudController').setAction('index') }}" class="btn btn-info btn-lg d-block text-white">
                        <i class="fas fa-list me-2"></i> Catégories
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\UserCrudController').setAction('index') }}" class="btn btn-dark btn-lg d-block">
                        <i class="fas fa-users me-2"></i> Utilisateurs
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Graphique des ventes
            var ctx = document.getElementById('salesChart').getContext('2d');
            var salesChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: {{ salesData.dates|json_encode|raw }},
                    datasets: [
                        {
                            label: 'Ventes (€)',
                            data: {{ salesData.sales|json_encode|raw }},
                            borderColor: 'rgba(54, 162, 235, 1)',
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            borderWidth: 2,
                            tension: 0.3,
                            yAxisID: 'y'
                        },
                        {
                            label: 'Commandes',
                            data: {{ salesData.orders|json_encode|raw }},
                            borderColor: 'rgba(255, 99, 132, 1)',
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            borderWidth: 2,
                            tension: 0.3,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Ventes (€)'
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Nombre de commandes'
                            },
                            grid: {
                                drawOnChartArea: false
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
